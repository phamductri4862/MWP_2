<%- include('../includes/header.ejs') %>
    </head>

    <%- include('../includes/navigation.ejs') %>

        <header class="masthead text-white text-center">
            <div class="container">
                <!-- Contact Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Register</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- Contact Section Form-->
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-xl-7">
                        <form id="contactForm" action="/register" method="POST">
                            <!-- Name input-->
                            <div class="form-floating mb-3">
                                <input class="form-control" id="name" name="email" type="email"
                                    placeholder="Email..." />
                                <label for="email">Email</label>
                                <div class="invalid-feedback">A name is required.
                                </div>
                            </div>
                            <!-- Email address input-->
                            <div class="form-floating mb-3">
                                <input class="form-control" name="password" id="email" type="password"
                                    placeholder="Pass..." />
                                <label for="password">Password</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" name="passwordConfirmation" id="email" type="password"
                                    placeholder="Pass..." />
                                <label for="password">Password Confirmation</label>
                            </div>

                            <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </header>

        <%- include('../includes/footer.ejs') %>